# SyrHousing Production Environment
# Copy this file and fill in values before deploying

# Database — SQLite (default) or PostgreSQL
# For SQLite (simple single-server):
DATABASE_URL=sqlite:////data/syrhousing.db
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://syrhousing:YOUR_PASSWORD@db:5432/syrhousing

APP_VERSION=1.0.0
DEBUG=false

# CORS — set to your production domain
CORS_ORIGINS=["https://yourdomain.com","http://yourdomain.com"]

# JWT — GENERATE A NEW SECRET: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# SendGrid Email (optional — emails silently skipped if empty)
SENDGRID_API_KEY=
SENDER_EMAIL=noreply@yourdomain.com
SENDER_NAME=SyrHousing - DJ AI Business Consultant
FRONTEND_URL=https://yourdomain.com

# LLM Provider (optional — falls back to offline chatbot if "none")
LLM_PROVIDER=none
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-sonnet-4-20250514
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o
LLM_MAX_TOKENS=1024

# PostgreSQL password (used by docker-compose.postgres.yml)
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
